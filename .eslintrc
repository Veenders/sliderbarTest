{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "rules": {
        "curly": "error",
        "quotes": ["error", "simple"],
        "semi": ["error", "never"],
        "indent": ["error", 4]
    },
    "env": {
        "browser": true,
        "node": true,
        "jest" : true
    }
}